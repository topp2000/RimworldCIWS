<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="MakeableDrugPillBase">
		<defName>Morphine</defName>
		<label>吗啡</label>
		<description>吗啡。</description>
		<graphicData>
			<texPath>Things/Item/Drug/SuperVaccine</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<socialPropernessMatters>false</socialPropernessMatters>
		<rotatable>false</rotatable>
		<statBases>
			<WorkToMake>600</WorkToMake>
			<MarketValue>64</MarketValue>
			<Mass>0.005</Mass>
			<Flammability>0.7</Flammability>
		</statBases>
		<tickerType>Rare</tickerType>
		<techLevel>Industrial</techLevel>
		<ingestible>
			<drugCategory>Medical</drugCategory>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>MorphineHigh</hediffDef>
					<severity>1.2</severity>
				</li>
			</outcomeDoers>
		</ingestible>
		<recipeMaker>
			<!--<researchPrerequisite>PenoxycylineProduction</researchPrerequisite>-->
			<recipeUsers>
				<li>DrugLab</li>
			</recipeUsers>
		</recipeMaker>
		<costList>
			<CIWSBaiYaoFen>1</CIWSBaiYaoFen>
		</costList>
		<comps>
			<li Class="CompProperties_Drug">
				<listOrder>1000</listOrder>
				<overdoseSeverityOffset>
					<min>0.08</min>
					<max>0.14</max>
				</overdoseSeverityOffset>
			</li>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>4</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
	</ThingDef>

	<HediffDef>
		<defName>MorphineHigh</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>吗啡</label>
		<description>吗啡。</description>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.2</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-1.2</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<painFactor>0</painFactor>
			</li>
		</stages>
	</HediffDef>

</Defs>
