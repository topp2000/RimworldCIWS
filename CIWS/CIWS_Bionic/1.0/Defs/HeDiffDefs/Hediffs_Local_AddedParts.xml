		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>1.0</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>1.0</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.5</partEfficiency>
		</addedPartProps>
	</HediffDef>


	<HediffDef ParentName="AddedBodyPartBase">
		<defName>CIWSZhinengTui</defName>
		<label>智能仿生腿</label>
		<labelNoun>智能仿生腿</labelNoun>
		<spawnThingOnRemoved>CIWSZhinengTui</spawnThingOnRemoved>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>1.0</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<addedPartProps>
